<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="3"
	parallel="tests" thread-count="3">

	<test name="Login Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTests" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="ProductInfo Page Test">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	
	<test name="User Registration Test">
	<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test>

</suite>